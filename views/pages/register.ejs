<div class="page-title" style="text-align: center;">
    <h1>Register New Account</h1>
</div>
<% if(typeof taken!== 'undefined' && taken){%>
<div class="text-center">
    <p style="color: red; font-family:sans-serif">That email address is already in use!</p>
</div>
<br>
<%}%>
<div class="login-form-content text-center">
    <form action="/register/" method="post" style="width: 100%; display: table;">
        <div class="form-input-container">
        <p class="form-label">Name</p>
        <input class="login-input" type="text" name="name" required title="Name">
        </div>
        <div class="form-input-container">
        <p class="form-label">E-mail Address</p>
        <input class="login-input" type="email" name="email" required title="E-mail Address">
        </div>
        <div class="form-input-container">
        <p class="form-label">Password</p>
        <input class="login-input" type="password" name="password" required title="Password">
        </div>
        <br>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        <input class="large-button-green" type="submit" value="Register" style="float: right;">
    </form>
</div>
<br>
<div class="text-center">
    <a class="small-button-green" href="/login">I already have an account &gt;</a>
</div>