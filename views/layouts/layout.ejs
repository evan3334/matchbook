<!DOCTYPE html>
<html>
  <head>
    <title>Matchbook</title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!--STYLES-->
    <link rel="stylesheet" href="/styles/matchbook.css">
    <link rel="stylesheet" href="/styles/menubar.css">
    <!--STYLES END-->
  </head>

  <body>
    <!-- TODO add a menu bar of some kind here -->
    <div class="menu-bar">
      <a class="menu-bar-button" href="/"><b>MATCHBOOK</b></a>
      <a class="menu-bar-button" href="/listings">Listings</a>
    <% if (req.session.me){%>
      <a class="menu-bar-button menu-bar-right" href="/logout">Logout</a>
      <% if(!req.session.me.verified){ %>
      <a class="menu-bar-button menu-bar-right" href="/account/verify"><i>Verify Account</i></a>
      <% } %>
      <span class="menu-bar-text menu-bar-right"><%= req.session.me.name %></span>
    <% } else {%>
      <a class="menu-bar-button menu-bar-right" href="/register">Register</a>
      <a class="menu-bar-button menu-bar-right" href="/login">Login</a>
    <% }%>
    </div>

    <%- body %>
  </body>
</html>
